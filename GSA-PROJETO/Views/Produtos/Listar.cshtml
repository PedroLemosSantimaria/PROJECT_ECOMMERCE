@model IEnumerable<Projeto.Models.Produtos>

@{
    ViewData["Title"] = "Listar";
}
<div class="container-minha-conta ">
<h1>Listar</h1>

<p>
    <a asp-action="CadastrarProduto">Cadastrar um novo produto</a>
</p>
<table class="table" style="width:900px">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipoP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tamanho)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Estoque)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string formato = "data:image/jpeg;base64," + Convert.ToBase64String(item.BytesArquivo);
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.TipoP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tamanho)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Estoque)
            </td>

            <td>
                <img src="@formato" style="width: 120px; height:120px" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Alterar", new { id = item.Codigo }) |
                
                @Html.ActionLink("Delete", "Excluir", new { cod = item.Codigo })
            </td>

        </tr>
        }
    </tbody>
</table>
    </div>
